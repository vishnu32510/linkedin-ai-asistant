{
  "manifest_version": 3,
  "name": "LinkedIn GPT Note Generator",
  "version": "1.0.0",
  "description": "Generate personalized LinkedIn notes using GPT.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/in/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": [
        "constants.js",
        "utils/dom.js",
        "utils/ui.js",
        "utils/storage.js",
        "features/profile.js",
        "features/buttons.js",
        "features/connect.js",
        "features/message.js",
        "features/note.js",
        "features/injection.js",
        "services/openai.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}

