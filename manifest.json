{
  "manifest_version": 3,
  "name": "LinkedIn AI Assistance",
  "version": "1.0.0",
  "description": "AI-powered LinkedIn assistant for generating personalized connection notes and messages.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/in/*",
    "https://api.openai.com/*",
    "https://script.google.com/*",
    "https://script.googleusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["welcome.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "constants.js",
        "utils/dom.js",
        "utils/ui.js",
        "features/profile.js",
        "features/note.js",
        "features/message.js",
        "features/injection.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
